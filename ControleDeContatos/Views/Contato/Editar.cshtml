@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center mb-4">
    <h1 class="display-4">Editar contato</h1>
</div>

<form>
    <div class="form-group mb-3">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato">
    </div>

    <div class="form-group mb-3">
        <label for="email">Email</label>
        <input type="email" class="form-control" placeholder="Digite o Email do contato">
    </div>

    <div class="form-group mb-3">
        <label for="celular">Celular</label>
        <input type="text" class="form-control" placeholder="Digite o celular do contato">
    </div>

    <!-- Botões em bloco -->
    <div class="d-flex flex-column">
        <button type="submit" class="btn btn-primary w-100 mb-2">Alterar</button>
        <a class="btn btn-secondary w-100" role="button" asp-controller="Contato" asp-action="Index">Voltar</a>
    </div>
</form>
