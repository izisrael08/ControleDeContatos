@model ContatoModel

@{
    ViewData["Title"] = "Confirmação de apagar o contato";
}
<div class="text-center mb-4">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary w-100 mb-2" asp-controller="Contato" asp-action="Index" role="button">Cancelar</a>

<a class="btn btn-danger  w-100" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Confirmar</a>